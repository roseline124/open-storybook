{
  "name": "open-storybook",
  "displayName": "open storybook",
  "description": "Quickly open only the storybooks you want",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.93.0"
  },
  "publisher": "roseline-song",
  "categories": [
    "Other",
    "Testing"
  ],
  "icon": "logo.png",
  "repository": {
    "url": "https://github.com/roseline124/open-storybook"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-storybook.openFocusedStorybook",
        "title": "Open Storybook: Open this storybook"
      },
      {
        "command": "open-storybook.openStoriesInFocusedFolder",
        "title": "Open Stories: Open stories in this folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "open-storybook.openStoriesInFocusedFolder",
          "when": "explorerResourceIsFolder == true",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
